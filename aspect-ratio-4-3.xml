<theme>
	<formatVersion>7</formatVersion>

<!-- 
4:3 aspect ratio
based on 640x480
-->

	<!-- Metadata Image variations -->
	<!-- ~~~~~~~~~~~ -->
   	<variables ifSubset="media-type:image">
		<visiblemix>false</visiblemix>
	</variables>
   	<variables ifSubset="media-type:miximage">
		<visiblemix>true</visiblemix>
	</variables>

	<!-- System View Grid -->
	<!-- ~~~~~~~~~~~ -->
      
	<view name="system" ifSubset="system-view:grid">
		<imagegrid name="imagegrid">
			<h>0.85</h>
			<w>0.985</w>
		</imagegrid>
		<image name="gamesicon" extra="true">
			<pos>0.075 0.05</pos>
            <size>0 ${systemInfoFontSize}</size>
		</image>
		<text name="systemInfoGrid">
			<pos>0.085 0.05</pos>
			<size>0 ${systemInfoFontSize}</size>
            <fontSize>${systemInfoFontSize}</fontSize>
		</text>
	</view>

	<!-- System View Carousel -->
	<!-- ~~~~~~~~~~~ -->
      
	<view name="system" ifSubset="system-view:carousel">
			<image name="gamesicon" extra="true">
				<pos>0.447 0.90</pos>
				<size>0 ${systemInfoFontSize}</size>
			</image>
			<text name="systemInfo">
				<pos>0.455 0.90</pos>
				<size>0 ${systemInfoFontSize}</size>
				<fontSize>${systemInfoFontSize}</fontSize>
			</text>
	</view>


	<!-- System View -->
	<!-- ~~~~~~~~~~~ -->
      
	<view name="screen">
		<stackpanel name="system-indicators" extra="true">
		<w>0.96875</w><!-- 620 -->
		<separator>10</separator>
		</stackpanel>
    </view>



	<!-- Help System -->
	<!-- ~~~~~~~~~~~ -->
		
	<view name="system, detailed, gamecarousel, grid">
		<helpsystem name="help">
			<origin>0.5 0.5</origin>
			<pos>0.5 ${helpPos}</pos>
			<fontSize>${helpFontSize}</fontSize>
			<fontPath>${fontBold}</fontPath>
			<textColor>${helpTextColor}</textColor>
			<iconColor>${helpTextColor}</iconColor>
			<iconA>./_inc/images/help-button-east.svg</iconA>
			<iconB>./_inc/images/help-button-south.svg</iconB>
			<iconX>./_inc/images/help-button-north.svg</iconX>
			<iconY>./_inc/images/help-button-west.svg</iconY>
		</helpsystem>
	</view>

